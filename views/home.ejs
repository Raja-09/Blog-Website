<%-include("partials/header")%>
    <h1>Home</h1>
    <p>
        <%=homeStartingContent%>
    </p>
    <div class="">
        <% posts.forEach((post)=>{ %>
            <h2>
                <%=post.title%>
            </h2>
            <p>
                <%if(post.text.length>200){%>
                    <%=post.text.substring(0,200)+" ...."%>
                        <a href="/posts/<%=post.title%>">Read More</a>
                        <%}else{%>
                            <%=post.text%>
                                <%}%>
            </p>
            <% }) %>
    </div>
    <%-include("partials/footer")%>
